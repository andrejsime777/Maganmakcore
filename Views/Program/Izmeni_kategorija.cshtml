@model Maganmakcore.Models.Kategorija_Program

@{
    ViewData["Title"] = "Измени Категорија";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Izmeni_kategorija">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KategorijaId" />
            <div class="form-group">
                <label asp-for="KategorijaIme" class="control-label"></label>
                <input asp-for="KategorijaIme" class="form-control" />
                <span asp-validation-for="KategorijaIme" class="text-danger"></span>
            </div>
            <div class="form-group" role="group">
                <input type="submit" value="Зачувај" class="btn kopce-proizvod" />
                <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Назад кон листата", "Index1")</button>
            </div>
        </form>
    </div>
</div>

