@model Maganmakcore.ViewModel.ProgramViewModel

@{
    ViewBag.Title = Model.momentalna_kategorija;
}

<h4 class="text-center">Во прилог ви претставуваме @Model.Programi.Count() програми кои ги нудиме (кликнете на програма за повеќе информации):</h4>
<br />
<div class="row">
    @foreach(var program in Model.Programi)
    {
        <div class="col-sm-6 col-md-4 col-xs-12">
            <div class="thumbnail prog">
                <div class="slika_prog">
                    <a class="hover-img caption" href="@program.pdf_link" target="_blank"> <img class="slika" alt="image" src="/sodrzhina/images/programs.png">
                    </a>
                </div>
                <div class="caption">
                    <h3 id="txt"><a href="@program.pdf_link" target="_blank">@Model.momentalna_kategorija на @program.Ime.ToLower()</a></h3>
                </div>
            </div>
        </div>
    }
</div>