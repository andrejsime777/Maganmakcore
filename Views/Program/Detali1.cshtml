@model Maganmakcore.Models.Programm

@{
    ViewData["Title"] = "Детали за " + Model.Ime.ToLower();
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd><br /><br />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kategorija_programi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kategorija_programi.KategorijaIme)
        </dd><br /><br />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pdf_link)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.pdf_link" target="_blank">Отвори во нов таб ></a>
        </dd>
    </dl>
</div>
<div class="btn-group" role="group">
    <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Измени", "Izmeni", new { id = Model.Id })</button>
    <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Избриши", "Izbrishi", new { id = Model.Id })</button>
    <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Назад кон листата", "Index1")</button>
</div>
