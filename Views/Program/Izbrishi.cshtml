@model Maganmakcore.Models.Programm

@{
    ViewData["Title"] = "Бришење на " + Model.Ime;
}


<h3>Дали сте сигурни дека сакате да ја избришете програмата @Model.Ime?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd><br /><br />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pdf_link)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.pdf_link" target="_blank">Отвори во нов таб ></a>
        </dd><br /><br /><br />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kategorija_programi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kategorija_programi.KategorijaIme)
        </dd class>
    </dl>
    

    <form asp-action="Izbrishi">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Избриши" class="btn btn-danger" /> <br /><br />
    </form>
    <div class="btn-group" role="group">
     <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Назад кон листата", "Index1")</button>
    </div>
</div>
