@model Maganmakcore.Models.Proizvod

@{
    ViewData["Title"] = "Детали за " + @Model.ime;
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kategorija_proizvodi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kategorija_proizvodi.KategorijaIme)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cena)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kratok_opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kratok_opis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dolg_opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dolg_opis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.slika)
        </dt>
        <dd class = "col-sm-10">
            <!-- Image Zoom HTML -->   
            <img id="myImg" src="@Model.slika" alt="@Model.ime" height="200px">

            <!-- The Modal -->
            <div id="myModal" class="modal">
                <img class="modal-content" id="img01">
            </div>
            <!-- End Image Zoom HTML -->
        </dd>               
        @if(Model.upatstvo_link != null)
        {
            <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.prospekt_link)
            </dt>
            <dd class = "col-sm-10">
            <a href="@Model.prospekt_link" target="_blank">Отвори во нов таб ></a>
            </dd>
        }
        @if(Model.upatstvo_link != null)
        {
            <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.upatstvo_link)
            </dt>
            <dd class = "col-sm-10">
            <a href="@Model.upatstvo_link" target="_blank">Отвори во нов таб ></a>
            </dd>
        }
        
    </dl>
</div>
<div class="btn-group" role="group">
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Измени", "Izmeni", new { id = Model.Id })</button>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Избриши", "Izbrishi", new { id = Model.Id })</button>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Назад кон листата", "Index1")</button>
</div>


<script>
// Get the modal
var modal = document.getElementById('myModal');

// Get the image and insert it inside the modal - use its "alt" text as a caption
var img = document.getElementById('myImg');
var modalImg = document.getElementById("img01");
var captionText = document.getElementById("caption");
img.onclick = function(){
    modal.style.display = "block";
    modalImg.src = this.src;
    modalImg.alt = this.alt;
    captionText.innerHTML = this.alt;
}


// When the user clicks on <span> (x), close the modal
modal.onclick = function() {
    img01.className += " out";
    setTimeout(function() {
       modal.style.display = "none";
       img01.className = "modal-content";
     }, 400);
    
 }    
    
</script>