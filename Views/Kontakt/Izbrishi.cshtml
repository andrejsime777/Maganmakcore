@model Maganmakcore.Models.Kontakt

@{
    ViewData["Title"] = "Бришење на контакт форма";
}
<br /><br />
<h3>Дали сте сигурни дека сакате да ја избришете оваа форма?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Poraka)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Poraka)
        </dd>
    </dl>
    
    <form asp-action="Izbrishi">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Избриши" class="btn btn-danger" /> 
    </form><br />
    <div class="btn-group" role="group">
    <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Назад кон листата", "List")</button>
</div>
</div>
