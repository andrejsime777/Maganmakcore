@model IEnumerable<Maganmakcore.Models.Kontakt>

@{
    ViewData["Title"] = "Листа на контакт форми";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-secondary">@Html.ActionLink("Детали", "Detali", new { id = item.Id })</button>
                    <button type="button" class="btn btn-secondary">@Html.ActionLink("Избриши", "Izbrishi", new { id = item.Id })</button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
