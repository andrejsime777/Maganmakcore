@model Maganmakcore.Models.Pocetna

@{
    ViewData["Title"] = "Бришење на слика";
}
<br /><br />
<h3>Дали сте сигурни дека сакате да ја избришете оваа слика?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Slika)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Slika" alt="Pocetna Slika" height="200px" style="border-radius: 15px;">
        </dd>
    </dl>
    
    <form asp-action="Izbrishi">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Избриши" class="btn btn-danger" />
    </form>
        <br />
    <div class="btn-group" role="group">

    <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Назад кон листата", "Index1")</button>
</div>
