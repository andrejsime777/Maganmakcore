@*@model IEnumerable<Maganmakcore.Models.Order>*@
@model Maganmakcore.ViewModel.OrderViewModel

@{
    ViewData["Title"] = "Нарачки";
}

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Нарачка број #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order.LastName)             
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order.ZipCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Детали", "Detali1", new { id = item.OrderId })</button>
                    <button type="button" class="btn kopce-proizvod">@Html.ActionLink("Избриши", "Izbrishi", new { id = item.OrderId })</button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
